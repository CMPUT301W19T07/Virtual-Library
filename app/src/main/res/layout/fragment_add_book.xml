<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vl.team07.com.virtuallibrary.AddBookFragment">


    <TextView
        android:id="@+id/addTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:text="@string/book_title"
        android:textColor="@color/colorPrimaryDark" />

    <EditText
        android:id="@+id/enterTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="@string/enter_title"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/addAuthorView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="24dp"
        android:text="@string/book_author"
        android:textColor="@color/colorPrimaryDark" />

    <EditText
        android:id="@+id/enterAuthorView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="144dp"
        android:ems="10"
        android:hint="@string/enter_author"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/addISBNView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="216dp"
        android:layout_marginRight="24dp"
        android:text="@string/book_ISBN"
        android:textColor="@color/colorPrimaryDark" />

    <EditText
        android:id="@+id/enterISBNView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="240dp"
        android:ems="10"
        android:hint="@string/enter_isbn"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/addDescriptionView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="312dp"
        android:layout_marginRight="24dp"
        android:text="@string/book_description"
        android:textColor="@color/colorPrimaryDark" />

    <EditText
        android:id="@+id/enterDescriptionView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="336dp"
        android:ems="10"
        android:hint="@string/enter_description"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="144dp"
        android:layout_height="172dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="384dp"
        android:src="@android:drawable/ic_menu_gallery" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="450dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="@string/bottom_navigation_add"
        android:textColor="@color/iconWhite"/>
</FrameLayout>
